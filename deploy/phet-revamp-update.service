[Unit]
Description=Update/build/deploy PhET Revamp static site
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=root
Group=root
ExecStart=/usr/local/bin/phet-revamp-update
WorkingDirectory=/

# Hardening (keep reasonable; script needs network + filesystem)
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
ReadWritePaths=/opt /var/www/learnnovice /var/lock

[Install]
WantedBy=multi-user.target
